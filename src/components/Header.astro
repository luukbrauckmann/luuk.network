---
import type { HTMLAttributes } from "astro/types";
import { Nav } from "@components";

type Props = HTMLAttributes<"header"> & { menu: { items: any[] } };

const { menu, class: className, ...props } = Astro.props;
---

<header class:list={["header", className]} {...props}>
<Nav items={menu.items} />
</header>

<style>
  .header {
    display: flex;
    position: sticky;
    z-index: 999;
    inset-block-start: 0px;
    justify-content: center;
    align-items: center;
    transition: 0.3s;
    margin: -1px -1px 0px -1px;
    border: 1px solid oklch(0.269 0.042 263);
    border-block-end-color: transparent;
    background-color: #001523;
    animation: borderIn 1s both;
    animation-timeline: scroll(root);
    animation-range: 0 var(--spacing-md);
  }

  .header::after {
    position: absolute;
    transform: translateY(100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    inset-block-end: 0px;
    inset-inline: 0px;
    background: linear-gradient(to bottom, oklch(0.269 0.042 263), transparent);
    height: var(--spacing-md);
    pointer-events: none;
    content: "";
    animation: shadowIn 1s both;
    animation-timeline: scroll(root);
    animation-range: 0 var(--spacing-md);
  }

  @keyframes borderIn {
    from {
        border-block-end-color: transparent;
    }
    to {
        border-block-end-color: oklch(0.269 0.042 263);
    }
  }

  @keyframes shadowIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
